<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_task_chatgpt_container"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        layout="@layout/chat_task_top_view_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/grey_3"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_gradient_soft"
            android:rotation="180" />

        <com.chunxia.chatgpt.ui.ViewLoadingDotsBounce
            android:id="@+id/topic_training_pending_view"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@color/pink_300" />

    </RelativeLayout>

</LinearLayout>
