<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/chat_task_top_view_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/overlay_dark_70"
        android:text="@string/chat_task_top_view_title"/>

    <ImageView
        android:id="@+id/chat_task_top_view_search"
        android:layout_marginTop="15dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_search_grey"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <ImageView
        android:id="@+id/chat_task_top_view_setting"
        android:layout_gravity="end|center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_settings_gray"
        android:layout_width="32dp"
        android:layout_height="32dp"/>


</LinearLayout>