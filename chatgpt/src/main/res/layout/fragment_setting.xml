<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:scrollbars="none"
    android:scrollingCache="true"
    android:background="@color/grey_3"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_task_top_view_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:text="@string/chat_setting_top_view_title"/>

        <RelativeLayout
            android:background="@drawable/pay_view_blue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/setting_pay_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:lottie_fileName="pay_button_present.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/animation_view"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:textSize="24sp"
                android:text="Go Premium"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

        <com.chunxia.chatgpt.ui.SettingItemView
            app:text="@string/setting_item_1"
            app:icon="@drawable/ic_volume_up"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pay_view_blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.chunxia.chatgpt.ui.SettingItemView
            app:text="@string/setting_item_2"
            app:icon="@drawable/ic_volume_up"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pay_view_blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.chunxia.chatgpt.ui.SettingItemView
            app:text="@string/setting_item_3"
            app:icon="@drawable/ic_volume_up"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pay_view_blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.chunxia.chatgpt.ui.SettingItemView
            app:text="@string/setting_item_4"
            app:icon="@drawable/ic_volume_up"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pay_view_blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <com.chunxia.chatgpt.ui.SettingItemView
            app:text="@string/setting_item_5"
            app:icon="@drawable/ic_volume_up"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pay_view_blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


        <com.chunxia.chatgpt.ui.SettingItemView
            app:text="@string/setting_item_6"
            app:icon="@drawable/ic_volume_up"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pay_view_blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>
